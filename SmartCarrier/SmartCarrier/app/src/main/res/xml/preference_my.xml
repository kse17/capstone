<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="@string/carrier_header">

        <EditTextPreference
            android:key="manager"
            android:title="@string/manager_title"
            app:useSimpleSummaryProvider="true"/>

        <EditTextPreference
            android:key="mac"
            android:title="@string/mac_title"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/setting_header">

        <SwitchPreferenceCompat
            android:key="smart lock"
            android:summaryOff="@string/turn_summary_off"
            android:summaryOn="@string/turn_summary_on"
            android:title="@string/smart_title" />

        <SwitchPreferenceCompat
            android:key="alarm"
            android:summaryOff="@string/turn_summary_off"
            android:summaryOn="@string/turn_summary_on"
            android:title="@string/alarm_title" />

        <SwitchPreferenceCompat
            android:key="led"
            android:summaryOff="@string/turn_summary_off"
            android:summaryOn="@string/turn_summary_on"
            android:title="@string/led_title" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/notifications_header">

        <SwitchPreferenceCompat
            android:key="open and close"
            android:summaryOff="@string/notice_summary_off"
            android:summaryOn="@string/notice_summary_on"
            android:title="@string/open_title" />

        <SwitchPreferenceCompat
            android:key="distance"
            android:summaryOff="@string/notice_summary_off"
            android:summaryOn="@string/notice_summary_on"
            android:title="@string/distance_title" />

    </PreferenceCategory>

</PreferenceScreen>